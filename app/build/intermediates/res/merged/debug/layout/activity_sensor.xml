<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity"
    android:orientation="vertical">

    <ListView
        android:id="@+id/chartList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/separator_horizontal"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSensor0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/ambient"/>

            <TextView
                android:id="@+id/txtSensor1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/decibel"/>

            <TextView
                android:id="@+id/txtSensor2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/magnetometer"/>

            <TextView
                android:id="@+id/txtSensor3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/accx"/>

            <TextView
                android:id="@+id/txtSensor4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/accy"/>

            <TextView
                android:id="@+id/txtSensor5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/accz"/>

            <TextView
                android:id="@+id/txtSensor6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:background="@drawable/compass_meter"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>